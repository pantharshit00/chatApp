extends layout

block scripts
    link(rel="stylesheet" href='/css/grid.min.css')
    script(src="/socket.io/socket.io.js")
    script(src="/js/soc.js")
    script window.id = "#{user._id}"

block content
    .ui.segment
        .row
            .col-lg-3.col-md-3.col-sm-12
                .ui.vertical.menu(style="margin:0 10px 25px 0")  
                    each user in users
                        unless (locals.user._id.equals(user._id))
                            a.item(data-id=`${user._id}`) #{user.name}
            .col-md-8.col-lg-8.col-sm-12
                h1(style="font-family:'Permanent Marker', cursive") All People
                .ui.divider
                #messages    
                .ui.divider
                form#chat
                    .ui.icon.input.fluid
                        input#ms(type='text', placeholder='Write a message')
                        i.send.icon

                                    
                    
